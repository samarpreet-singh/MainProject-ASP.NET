@model MainProject.Models.Category

@{
    ViewData["Title"] = "Delete Category - Crafty Creations";
}

<div class="container">
    <h1 class="categories-heading">Delete an Existing Category</h1>

    <h2 class="categories-subheading">Are you sure you want to delete this category?</h2>
    <hr />
    <dl class="row" id="details-categories-container">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete" class="link-para-container">
        <input type="hidden" asp-for="Id" />
        <input class="action-button-delete" type="submit" value="Delete" class="btn btn-danger"/>
        <a class="link-style-1" asp-action="Index">Back to Categories List</a>
    </form>
</div>
