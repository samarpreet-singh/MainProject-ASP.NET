@model MainProject.Models.Category

@{
    ViewData["Title"] = "Create Category - Crafty Creations";
}

<div class="container">
    <h1 class="categories-heading">Create a New Category</h1>

    <h2 class="categories-subheading">Category Details</h2>
    <hr />
    <div class="row" id="create-categories-container">
        <div class="col-md-4 custom-centered">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control description-box"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create Category!" class="action-button-create" />
                </div>
            </form>
        </div>
    </div>

    <p class="link-para-container">
        <a class="link-style-1" asp-action="Index">Back to Categories List</a>
    </p>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
