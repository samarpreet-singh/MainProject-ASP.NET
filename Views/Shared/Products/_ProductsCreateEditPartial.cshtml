@model MainProject.Models.Product // No need for an Enumerable here because this is NOT a table. This is ONE product we are dealing with while creating it OR editing it. Each product has only ONE category and same for the other fields. Whereas if this were a table being populated, it would have multiple rows with different products and THAT is where we need an enumerable because we have to iterate over a list of those values and put them in the correct places.

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="CategoryId" class="control-label"></label>
    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control description-box" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Image" class="control-label"></label>
    <input asp-for="Image" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="MSRP" class="control-label"></label>
    <input asp-for="MSRP" class="form-control" />
    <span asp-validation-for="MSRP" class="text-danger"></span>
</div>